<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell_pc.se_project.NavigationMenu">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/firstAidImg"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:src="@drawable/firstaidimg"
                android:background="@null"
                android:layout_weight="0.3"
                />

            <Button
                android:id="@+id/firstAidButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="First Aid"
                android:layout_weight="0.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/settingImg"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:src="@drawable/settingimg"
                android:background="@null"
                android:layout_weight="0.3"
                />

            <Button
                android:id="@+id/settingButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="Setting"
                android:layout_weight="0.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/helpImg"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:src="@drawable/helpiconimg"
                android:background="@null"
                android:layout_weight="0.3"
                />

            <Button
                android:id="@+id/helpButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="Help"
                android:layout_weight="0.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/aboutUsimg"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:src="@drawable/aboutusimg"
                android:background="@null"
                android:layout_weight="0.3"
                />

            <Button
                android:id="@+id/aboutUsbutton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="About Us"
                android:layout_weight="0.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/logOutImg"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:src="@drawable/logoutimg"
                android:background="@null"
                android:layout_weight="0.3"
                />

            <Button
                android:id="@+id/logOutButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="Logout"
                android:layout_weight="0.5" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>
